[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal with a light background color
	side-by-side = true
	line-numbers = true
	syntax-theme = Monokai Extended
	
[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default 
